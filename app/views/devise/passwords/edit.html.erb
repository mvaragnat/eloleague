<%= render(AuthCardComponent.new(title: t('auth.password.change'), subtitle: t('auth.password.change_subtitle'))) do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true, data: { turbo: false } do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, User.human_attribute_name(:password) %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password' %>
    </div>

    <div>
      <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation) %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
    </div>

    <div style="margin-top:1rem; display:flex; gap:.5rem; align-items:center;">
      <%= f.submit t('auth.password.change_button'), class: 'btn btn-primary' %>
      <%= link_to t('devise.shared.links.sign_in', default: 'Already have an account?'), new_session_path(resource_name), class: 'btn btn-inverse' %>
    </div>
  <% end %>
<% end %>


