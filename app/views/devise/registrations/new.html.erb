<%= render(AuthCardComponent.new(title: t('auth.signup'), subtitle: t('auth.signup_subtitle'))) do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false } do |f| %>
    <div>
      <%= f.label :username, User.human_attribute_name(:username) %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div>
      <%= f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password, User.human_attribute_name(:password) %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation) %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div style="margin-top:1rem; display:flex; gap:.5rem; align-items:center;">
      <%= f.submit t('auth.signup'), class: "btn btn-primary" %>
      <%= link_to t('devise.shared.links.sign_in', default: 'Already have an account?'), new_session_path(resource_name), class: "btn btn-inverse" %>
    </div>
  <% end %>
<% end %>


