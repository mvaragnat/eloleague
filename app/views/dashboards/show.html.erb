<div>
  <div class="page-header">
    <h1><%= t('hello') %> <%= @user.username %></h1>
    <div style="margin-top: 1rem; display:flex; gap:0.5rem;">
      <%= link_to t('games.add'), new_game_event_path, class: "btn btn-primary", data: { turbo_frame: "modal" } %>
    </div>
  </div>

  <div class="games-container">
    <% if @elo_ratings.present? %>
      <div class="card card--draw">
        <div class="card-header">
          <h3>Elo</h3>
          <p class="card-date"><%= t('games.participants') %></p>
        </div>
        <div class="card-body">
          <ul style="list-style:none; padding-left:0; margin:0;">
            <% @elo_ratings.each do |er| %>
              <li style="display:flex; justify-content:space-between; padding:0.25rem 0; border-bottom:1px solid var(--gray-300);">
                <span><%= er.game_system.name %></span>
                <strong><%= er.rating %></strong>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div id="games-list">
      <% if @games.any? %>
        <% @games.each do |game| %>
          <%= render GameEventComponent.new(event: game, current_user: @user) %>
        <% end %>
      <% else %>
        <div id="no-games-message" class="card">
          <p class="card-date"><%= t('games.no_games') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= turbo_frame_tag "modal" %> 