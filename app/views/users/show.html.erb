<div class="games-container">
  <div class="page-header">
    <h1><%= t('players.title', username: @user.username) %></h1>
  </div>

  <div class="card">
    <div class="card-header">
      <h3><%= t('players.current_elo_by_system') %></h3>
    </div>
    <div class="card-body">
      <% if @elo_ratings.any? %>
        <table style="width:100%; border-collapse: collapse;">
          <thead>
            <tr>
              <th style="text-align:left; padding:0.25rem 0;"><%= t('players.system') %></th>
              <th style="text-align:right; padding:0.25rem 0;"><%= t('elo.rating') %></th>
              <th style="text-align:right; padding:0.25rem 0;"><%= t('elo.count') %></th>
            </tr>
          </thead>
          <tbody>
            <% @elo_ratings.each do |row| %>
              <tr>
                <td style="padding:0.25rem 0;"><%= row.game_system.localized_name %></td>
                <td style="padding:0.25rem 0; text-align:right;"><%= row.rating %></td>
                <td style="padding:0.25rem 0; text-align:right;"><%= row.games_played %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="card-date"><%= t('players.no_ratings') %></p>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h3><%= t('players.elo_over_time') %></h3>
    </div>
    <div class="card-body">
      <% if @elo_series_by_system.any? %>
        <div data-controller="elo-chart"
             data-elo-chart-series-value="<%= @elo_series_by_system.to_json %>">
          <svg data-elo-chart-target="chart" viewBox="0 0 800 300" preserveAspectRatio="xMidYMid meet" style="width:100%; height:auto;"></svg>
        </div>
      <% else %>
        <p class="card-date"><%= t('players.no_history') %></p>
      <% end %>
    </div>
  </div>

  <% if @player_stats.any? %>
    <div class="card">
      <div class="card-header">
        <h3><%= t('players.stats_by_system') %></h3>
      </div>
      <div class="card-body">
        <% @player_stats.each do |system_stats| %>
          <div class="mb-6">
            <h4 class="text-lg font-semibold mb-2"><%= system_stats[:system_name] %></h4>

            <%# Overall stats for this system %>
            <div class="mb-4">
              <h5 class="text-sm font-medium text-gray-600 mb-1"><%= t('players.stats_total') %></h5>
              <div class="overflow-x-auto">
                <table class="table w-full">
                  <thead>
                    <tr>
                      <th><%= t('stats.total_games') %></th>
                      <th><%= t('stats.wins') %></th>
                      <th><%= t('stats.losses') %></th>
                      <th><%= t('stats.draws') %></th>
                      <th><%= t('stats.win_percent') %></th>
                      <th><%= t('stats.loss_percent') %></th>
                      <th><%= t('stats.draw_percent') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><%= system_stats[:total_games] %></td>
                      <td><%= system_stats[:wins] %></td>
                      <td><%= system_stats[:losses] %></td>
                      <td><%= system_stats[:draws] %></td>
                      <td><%= number_with_precision(system_stats[:win_percent], precision: 1) %>%</td>
                      <td><%= number_with_precision(system_stats[:loss_percent], precision: 1) %>%</td>
                      <td><%= number_with_precision(system_stats[:draw_percent], precision: 1) %>%</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <%# Per-faction stats %>
            <% if system_stats[:faction_rows].any? %>
              <div>
                <h5 class="text-sm font-medium text-gray-600 mb-1"><%= t('players.stats_by_faction') %></h5>
                <div class="overflow-x-auto">
                  <table class="table w-full">
                    <thead>
                      <tr>
                        <th><%= t('stats.faction') %></th>
                        <th><%= t('stats.total_games') %></th>
                        <th><%= t('stats.wins') %></th>
                        <th><%= t('stats.losses') %></th>
                        <th><%= t('stats.draws') %></th>
                        <th><%= t('stats.win_percent') %></th>
                        <th><%= t('stats.loss_percent') %></th>
                        <th><%= t('stats.draw_percent') %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% system_stats[:faction_rows].each do |row| %>
                        <tr>
                          <td><%= row[:faction_name] %></td>
                          <td><%= row[:total_games] %></td>
                          <td><%= row[:wins] %></td>
                          <td><%= row[:losses] %></td>
                          <td><%= row[:draws] %></td>
                          <td><%= number_with_precision(row[:win_percent], precision: 1) %>%</td>
                          <td><%= number_with_precision(row[:loss_percent], precision: 1) %>%</td>
                          <td><%= number_with_precision(row[:draw_percent], precision: 1) %>%</td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div id="games-list">
    <% @events.each do |event| %>
      <%= render(GameEventComponent.new(event: event, current_user: @user)) %>
    <% end %>
    <% if @events.blank? %>
      <p class="card-date"><%= t('games.no_games') %></p>
    <% end %>
  </div>
</div>


