<%= render(AuthCardComponent.new(title: t('auth.login'), subtitle: t('auth.login_subtitle'))) do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, data: { turbo: false } do |f| %>
    <div>
      <%= f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password, User.human_attribute_name(:password) %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <label>
          <%= f.check_box :remember_me %>
          <span><%= t('devise.sessions.remember_me', default: 'Remember me') %></span>
        </label>
      </div>
    <% end %>

    <div style="margin-top:1rem; display:flex; gap:.5rem; align-items:center;">
      <%= f.submit t('auth.login'), class: "btn btn-primary" %>
      <%= link_to t('devise.shared.links.forgot_your_password', default: 'Forgot your password?'), new_password_path(resource_name), class: "btn btn-inverse" %>
    </div>
  <% end %>

  <div style="margin-top:1rem;">
    <%= t('devise.shared.links.sign_up', default: 'Don\'t have an account?') %>
    <%= link_to t('auth.signup'), new_registration_path(resource_name) %>
  </div>
<% end %>


