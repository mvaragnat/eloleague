<div class="games-container">
  <h1><%= t('tournaments.new.title') %></h1>

  <%= form_with model: @tournament, scope: :tournament, url: tournaments_path, data: { controller: 'tournament-form' } do |f| %>
    <div class="card">
      <div class="card-body" style="display:grid; gap:0.75rem;">
        <div>
          <%= f.label :name, t('tournaments.new.name') %>
          <%= f.text_field :name, required: true %>
        </div>
        <div>
          <label class="card-date" style="font-style:normal; font-weight:600;">
            <%= t('tournaments.new.online', default: 'Online tournament') %>
          </label>
          <label style="display:inline-flex; align-items:center; gap:0.5rem;">
            <%= f.check_box :online, data: { action: 'change->tournament-form#toggleOnline' } %>
            <span><%= t('tournaments.new.online_hint', default: 'If checked, no physical location') %></span>
          </label>
        </div>
        <div data-tournament-form-target="locationBlock">
          <%= f.label :location, t('tournaments.new.location', default: 'Location') %>
          <%= f.text_field :location, placeholder: t('tournaments.new.location_placeholder', default: 'Enter address'), data: { controller: 'place-autocomplete' } %>
        </div>
        <div>
          <%= f.label :description, t('tournaments.new.description') %>
          <%= f.text_area :description, rows: 3 %>
        </div>
        <div>
          <%= f.label :game_system_id, t('tournaments.new.game_system') %>
          <%= f.collection_select :game_system_id, Game::System.all.sort_by(&:localized_name), :id, :localized_name, include_blank: t('games.new.select_system') %>
        </div>
        <div>
          <%= f.label :format, t('tournaments.new.format') %>
          <%= f.select :format, [[t('tournaments.formats.open'), 'open'], [t('tournaments.formats.swiss'), 'swiss'], [t('tournaments.formats.elimination'), 'elimination']], { include_blank: t('games.new.select_system') }, { data: { tournament_form_target: 'format', action: 'change->tournament-form#toggleRounds' } } %>
        </div>
        <div data-tournament-form-target="rounds" style="display:none;">
          <%= f.label :rounds_count, t('tournaments.new.rounds_count') %>
          <%= f.number_field :rounds_count, min: 1 %>
        </div>
        <div>
          <%= f.label :max_players, t('tournaments.new.max_players', default: 'Max players') %>
          <%= f.number_field :max_players, min: 1, placeholder: t('tournaments.new.max_players_placeholder', default: 'No limit') %>
        </div>
        <div>
          <%= f.label :starts_at, t('tournaments.new.starts_at') %>
          <%= f.text_field :starts_at, placeholder: t('tournaments.new.datetime_placeholder', default: 'YYYY-MM-DD HH:MM'), data: { controller: 'datetime-picker' } %>
        </div>
        <div>
          <%= f.label :ends_at, t('tournaments.new.ends_at') %>
          <%= f.text_field :ends_at, placeholder: t('tournaments.new.datetime_placeholder', default: 'YYYY-MM-DD HH:MM'), data: { controller: 'datetime-picker' } %>
        </div>
        <div>
          <%= f.label :require_army_list_for_check_in, t('tournaments.new.require_army_list_for_check_in', default: 'Require army list at check-in') %>
          <%= f.check_box :require_army_list_for_check_in %>
        </div>
        <div>
          <%= f.label :non_competitive, t('tournaments.new.non_competitive', default: 'Non-competitive (no Elo impact)') %>
          <%= f.check_box :non_competitive %>
        </div>
      </div>
      <div class="card-footer">
        <%= f.submit t('tournaments.new.create'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div> 