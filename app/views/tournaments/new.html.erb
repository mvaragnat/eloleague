<div class="games-container">
  <h1>New Tournament</h1>

  <%= form_with model: @tournament, url: tournaments_path do |f| %>
    <div class="card">
      <div class="card-body" style="display:grid; gap:0.75rem;">
        <div>
          <%= f.label :name %>
          <%= f.text_field :name, required: true %>
        </div>
        <div>
          <%= f.label :description %>
          <%= f.text_area :description, rows: 3 %>
        </div>
        <div>
          <%= f.label :game_system_id, 'Game System' %>
          <%= f.collection_select :game_system_id, Game::System.order(:name), :id, :name, include_blank: 'Select a system' %>
        </div>
        <div>
          <%= f.label :format %>
          <%= f.select :format, [['Open', 'open'], ['Swiss', 'swiss'], ['Elimination', 'elimination']], include_blank: 'Select a format' %>
        </div>
        <div>
          <%= f.label :rounds_count, 'Rounds (Swiss only)' %>
          <%= f.number_field :rounds_count, min: 1 %>
        </div>
        <div>
          <%= f.label :starts_at %>
          <%= f.datetime_field :starts_at %>
        </div>
        <div>
          <%= f.label :ends_at %>
          <%= f.datetime_field :ends_at %>
        </div>
      </div>
      <div class="card-footer">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div> 